<Alloy>
    <ListView id="listView" backgroundColor="#c9c7c9" defaultItemTemplate="template" deleteButtonTitle="Verlassen" onItemclick="listView_Itemclick">
        <RefreshControl platform="ios" id="ptr" tintColor="#800"/>
        <Templates>
            <ItemTemplate name="template" height="310dp" layout="absolute">
                <View top="10" layout="absolute" height="300dp" width="96%" class="white shadow">
                    <View top="0" class="white" width="100%" height="50">
                        <Label class="lvDate" bindId='date' top="2" left="5"></Label>
                        <Label class="lvLocation" bindId='location' top="28" left="5"></Label>
                    </View>
                    <View top="50" height="240" layout="absolute" class="white" width="98%">
                        <View top="10" left="10" class="participant">
                            <ImageView bindId="participant1Image" id="participant1Image" class="participantImage"></ImageView>
                            <Label bindId="participant1" id="participant1Name" class="participantName"></Label>
                        </View>
                        <View top="10" right="10" class="participant">
                            <ImageView bindId="participant2Image" id="participant2Image" class="participantImage"></ImageView>
                            <Label bindId="participant2" id="participant2Name" class="participantName"></Label>
                        </View>
                        <View top="130" left="10" class="participant">
                            <ImageView bindId="participant3Image" id="participant3Image" class="participantImage"></ImageView>
                            <Label bindId="participant3" id="participant3Name" class="participantName"></Label>
                        </View>
                        <View top="130" right="10" class="participant">
                            <ImageView bindId="participant4Image" id="participant4Image" class="participantImage"></ImageView>
                            <Label bindId="participant4" id="participant4Name" class="participantName"></Label>
                        </View>
                    </View>
                </View>
            </ItemTemplate>
        </Templates>
    </ListView>
</Alloy>