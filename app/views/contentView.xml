<Alloy>
    <Collection src="event"/>
    <Collection src="place"/>
    <View id="winHome" layout="vertical" backgroundColor="black">

        <View layout="absolute" top="0" height="160" width="100%" class="white shadow">
            <ScrollableView id="svLocations" onScrollend="svLocation_scrollend"></ScrollableView>
            <View id="pagingControl" layout="horizontal" bottom="0" width="100%" height="4" backgroundColor="#ffffff"></View>
        </View>
        <View id="lvContainer" height="Ti.UI.FILL" layout="absolute">
            <View id="vFirstTimeInstruction" height="Ti.UI.FILL" position="absolute" visible="false">
                <Label id="lblInstruction">Tippe unten um teilzunehmen.</Label>
            </View>
            <SwipeRefresh id="refreshList" platform="android" module="com.rkam.swiperefreshlayout">
                <Require type="view" id="listView" src="homelist"/>
            </SwipeRefresh>
            <Require platform="ios" type="view" id="listView" src="homelist"/>
            <View id="actionContainer" bottom="-120" width="Ti.UI.FILL" height="Ti.UI.SIZE">
                <View backgroundColor="#e3e3e3" height="1" width="Ti.UI.FILL" bottom="60"/>
                <View platform="android" zIndex="1" backgroundColor="#ffffff" bottom="0" opacity="0.5" width="100%" height="60"></View>
                <Module platform="ios" id="blurview" module="com.artanisdesign.uivisualeffect" method="createView" bottom="0" width="100%" height="60" effect="light" zIndex="1"  />
                <View zIndex="2" bottom="10" height="Ti.UI.SIZE" width="Ti.UI.FILL">
                    <ImageView id="btnAddDate" onClick="btnAddDate_Click" image="/images/plus.png"/>
                </View>
            </View>
        </View>
    </View>
</Alloy>