<Alloy>
    <Collection src="event"/>
    <Collection src="place"/>
    <View id="winHome" layout="vertical" backgroundColor="black">

        <View layout="absolute" top="0" height="60" width="100%" class="white shadow">
            <ImageView opacity="0.4" image="/images/arrow_left.png" top="20" left="5dp"></ImageView>
            <ScrollableView id="svLocations" width="100%" top="14" height="Ti.UI.FILL" onScrollend="svLocation_scrollend" zIndex="10"></ScrollableView>
            <ImageView opacity="0.4" image="/images/arrow_right.png" top="20" right="5dp"></ImageView>
            <View id="pagingControl" layout="horizontal" bottom="0" width="100%" height="2" backgroundColor="#ffffff"></View>
        </View>
        <View id="lvContainer" height="Ti.UI.FILL" layout="absolute">
            <View id="vFirstTimeInstruction" height="Ti.UI.FILL" position="absolute" visible="false">
                <Label id="lblInstruction">Tippe unten um teilzunehmen.</Label>
            </View>
            <!-- <View id="listWrapper"></View> -->
            <ListView id="listView" height="Ti.UI.SIZE" backgroundColor="#c9c7c9" defaultItemTemplate="template" deleteButtonTitle="Verlassen" onItemclick="listView_Itemclick">
                <Templates>
                    <ItemTemplate name="template" height="310dp" layout="absolute">
                        <View top="10" layout="absolute" height="300dp" width="96%" class="white shadow">
                            <View top="0" class="white" width="100%" height="50">
                                <Label class="lvDate" bindId='date' top="2" left="5"></Label>
                                <Label class="lvLocation" bindId='location' top="28" left="5"></Label>
                            </View>
                            <View top="50" height="240" layout="absolute" class="white" width="98%">
                                <View top="10" left="10" class="participant">
                                    <ImageView bindId="participant1Image" id="participant1Image" class="participantImage"></ImageView>
                                    <Label bindId="participant1" id="participant1Name" class="participantName"></Label>
                                </View>
                                <View top="10" right="10" class="participant">
                                    <ImageView bindId="participant2Image" id="participant2Image" class="participantImage"></ImageView>
                                    <Label bindId="participant2" id="participant2Name" class="participantName"></Label>
                                </View>
                                <View top="130" left="10" class="participant">
                                    <ImageView bindId="participant3Image" id="participant3Image" class="participantImage"></ImageView>
                                    <Label bindId="participant3" id="participant3Name" class="participantName"></Label>
                                </View>
                                <View top="130" right="10" class="participant">
                                    <ImageView bindId="participant4Image" id="participant4Image" class="participantImage"></ImageView>
                                    <Label bindId="participant4" id="participant4Name" class="participantName"></Label>
                                </View>
                            </View>
                        </View>
                    </ItemTemplate>
                </Templates>
            </ListView>
            <!-- <Require type="view" src="homelist" id="homelist"/> -->
            <!-- <Widget src="com.jolicode.pullToRefresh" id="pulltorefresh"/> -->
            <View bottom="10" height="Ti.UI.SIZE" width="Ti.UI.FILL">
                <ImageView id="btnAddDate" onClick="btnAddDate_Click" image="/images/plus.png"/>
            </View>
        </View>
    </View>
</Alloy>